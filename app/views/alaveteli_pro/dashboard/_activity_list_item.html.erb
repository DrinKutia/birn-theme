<div class="dashboard-activity__item">
  <div class="dashboard-activity__item__time">
    <% if activity_list_item.event_time >= Time.zone.now - 1.day %>
      <%= _('{{length_of_time}} ago', :length_of_time => time_ago_in_words(activity_list_item.event_time)) %>
    <% else %>
      <%= I18n.l(activity_list_item.event_time, format: '%d %B %Y') %>
    <% end %>
  </div>
  <div class="dashboard-activity__item__description">
    <p>
      <%= activity_item_description(activity_list_item) %>
      <%= link_to activity_list_item.call_to_action,
                  activity_list_item.call_to_action_url %>
    </p>
  </div>
</div>
